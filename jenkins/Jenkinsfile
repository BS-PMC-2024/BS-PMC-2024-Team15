pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.10-alpine'
                }
            }
            steps {
                // Install dependencies as part of the build process
                sh 'pip install -r Backend/requirements.txt'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python:3.10-alpine'
                }
            }
            steps {
                sh 'pytest -vv --disable-warnings --junit-xml test-reports/results.xml' // Run pytest
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}
