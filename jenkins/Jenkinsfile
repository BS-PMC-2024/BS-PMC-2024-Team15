pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.10-alpine'
                }
            }
            steps {
                sh 'python -m py_compile Backend/*.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python:3.10-alpine'
                }
            }
            steps {
                sh 'pip install --user pytest' // Install pytest with user permission
                sh 'pytest --verbose --junit-xml test-reports/results.xml Backend/'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}
