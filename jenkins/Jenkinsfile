pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.10-alpine'
                }
            }
            steps {
                sh 'python -m py_compile Backend/app.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python:3.10-alpine' // Reusing the working image from Build stage
                }
            }
            steps {
                sh 'pytest --verbose --junit-xml test-reports/results.xml Backend/test_app.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}
