pipeline {
    agent {
        docker {
            image 'here i input image name'
            args '-p 5000:5000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t your_image_name .'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --rm your_image_name pytest'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d -p 5000:5000 your_image_name'
            }
        }
    }
}