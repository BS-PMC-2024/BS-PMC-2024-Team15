pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.10-alpine'
                }
            }
            steps {
                sh 'python -m py_compile Backend/app.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python:3.10-alpine' // Using Python image directly to run pytest
                }
            }
            steps {
                sh 'pip install --user pytest'  // Install pytest
                sh 'pytest -vv --disable-warnings --junit-xml test-reports/results.xml' // Run pytest with verbose output and disable warnings
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}
