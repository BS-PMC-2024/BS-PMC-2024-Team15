pipeline {
    agent {
        docker {
            image 'docker/compose:1.29.2' // Replace with the appropriate image version
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Mount the Docker socket
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            steps {
                sh 'docker-compose run --rm flask-api pytest'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
